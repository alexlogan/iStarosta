<% title "#{@group.name} - Дисциплины" %>


<%= link_to 'Новая дисциплина', new_lesson_path, class: "btn btn-success" %> <br/> <br/>
<table class="table table-responsive">
    <% @lessons.each_with_index do |lesson, index| %>
      <tr>
        <th class="row"><%= index+1 %></th>
        <th><%= link_to lesson.name, lesson_logs_path(lesson.id) %></th>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Посмотреть журнал', lesson_logs_path(lesson.id), class: "btn btn-success" %>
            <%= link_to 'Изменить', edit_lesson_path(lesson), class: "btn btn-primary" %>
            <%= link_to 'Удалить', lesson,
                      method: :delete, data: { confirm: 'Вы уверены?' },
                      class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
</table>
