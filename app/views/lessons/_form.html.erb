<div class="col-md-7 col-sm-7 col-xs-12">
<%= simple_form_for @lesson, html: {class: "form-horizontal"}, wrapper: :horizontal_form do |f| %>

      <%= f.error_notification %>

      <%= f.input :name, placeholder: 'Введите название', label: 'Название' %>

      <%= f.input :kind, as: :radio_buttons, :collection => Lesson.kinds.keys, label: 'Тип' %>

      <%= f.input :semester, as: :select, collection: 1..12, label: 'Cеместр', selected: @lesson.new_record? ? @group.setting.current_semester : @lesson.semester %>

    <div class="form-group">
      <%= f.button :submit %>
      <%= link_to 'Назад', lessons_path, class: "btn btn-default" %>
    </div>

<% end %>
</div>