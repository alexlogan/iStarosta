<% title "Все группы" %>

<div class="col-lg-7 col-lg-push-2 col-md-9">

    <%= label_tag 'Поиск' %>

    <%= form_tag search_groups_path, html: {class: "form-inline"} do %>

      <div class="form-group col-sm-6 col-xs-8 col-md-7">
        <%= select_tag 'group[id]', options_from_collection_for_select(@groups, :id, :name), class: "input-group form-control group name" %>
      </div>

        <%= submit_tag "Перейти", class: "btn btn-success" %>

    <% end %>

    <br/>

    <table class="table table-responsive">
      <% @groups.each_with_index do |group, index| %>
          <tr>
            <th class="row"><%= index+1 %></th>
            <th><%= link_to  group.name, group_path(group) %></th>
            <td>
              <div class="btn-group" role="group" aria-label="...">
                <%= link_to  'Перейти', group_path(group), class: "btn btn-success" %>
              </div>
            </td>
          </tr>
      <% end %>
    </table>

</div>