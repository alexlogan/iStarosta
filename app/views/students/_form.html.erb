<div class="col-md-5 col-sm-5 col-xs-10">

<%= simple_form_for @student, html: {class: "form-horizontal"}, wrapper: :horizontal_form do |f| %>

      <%= f.error_notification %>

      <%= f.input :name, placeholder: "Имя студента" %>
    <div class="form-group">
      <%= f.button :submit %>
      <%= link_to 'Назад', student_path(@student), class: "btn btn-default" if action_name==='edit' %>
      <%= link_to 'Назад', students_path, class: "btn btn-default" if action_name==='new' %>
    </div>
  <% end %>
</div>
