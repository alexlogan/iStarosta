<div class="col-md-5 col-sm-5 col-xs-7">

<%= title 'Настройки профиля' %>

<%= simple_form_for([resource, resource.with_group], as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <%= f.simple_fields_for :group do |group| %>
        <%= group.input :name, label: "Group name", placeholder: "Your group name", required: true %>
    <% end %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p> <%= link_to "Удалить мой аккаунт", registration_path(resource_name),
                data: { confirm: "Are you sure?" },
                method: :delete,
                class: "btn btn-danger"%></p>

<%= link_to "Back", :back %>

</div>