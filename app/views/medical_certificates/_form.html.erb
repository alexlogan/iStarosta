<%= form_for([@student, @medical_certificate], html: {class: "form-horizontal"}) do |f| %>
    <% if @medical_certificate.errors.any? %>
        <div id="error_explanation">
          <% @medical_certificate.errors.full_messages.each do |message| %>
              <%= content_tag :div, message, class: "alert alert-danger"%>
          <% end %>
        </div>
    <% end %>

  <div class="container">
    <div class="form-group">
      <div class="input-daterange input-group" id="datepicker">
        <span class="input-group-addon">From</span>
        <%= f.text_field :from, {class: "form-control"} %>
        <span class="input-group-addon">to</span>
        <%= f.text_field :till, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', student_medical_certificates_path, class: "btn btn-default" %>
    </div>

  </div>

<% end %>

